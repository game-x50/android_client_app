<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/default_3_2_padding"
        android:paddingEnd="@dimen/default_3_2_padding">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/forgot_password_screen_email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/game_auth_ui_email">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/forgot_password_screen_send_reset_password_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/game_auth_ui_send_reset_password_email" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>