<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="DeveloperSettingsCategoryTitle" tools:ignore="ResourceName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/default_padding</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
        <item name="android:textColor">#eeeeee</item>
    </style>

    <style name="DeveloperSettingsCategoryDivider" tools:ignore="ResourceName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#eeeeee</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="DeveloperSettingsItemTitle" tools:ignore="ResourceName">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
        <item name="android:textColor">#dddddd</item>
    </style>

    <style name="DeveloperSettingsItemContainer" tools:ignore="ResourceName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/default_padding</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="DeveloperSettingsItemControl" tools:ignore="ResourceName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
        <item name="android:paddingStart">@dimen/default_padding</item>
        <item name="android:paddingEnd">@dimen/default_padding</item>
        <item name="android:textColor">#dddddd</item>
    </style>

    <style name="DeveloperSettingsButton" tools:ignore="ResourceName">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:borderlessButtonStyle">?attr/borderlessButtonStyle</item>
    </style>

</resources>