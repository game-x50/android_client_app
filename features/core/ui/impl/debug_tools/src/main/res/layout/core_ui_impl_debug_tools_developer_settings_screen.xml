<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88000000"
    tools:ignore="HardcodedText,Overdraw">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/staging_settings"
            layout="@layout/core_ui_impl_staging_tools_developer_settings" />

        <include
            android:id="@+id/debug_settings"
            layout="@layout/core_ui_impl_debug_tools_developer_settings" />

    </LinearLayout>

</ScrollView>